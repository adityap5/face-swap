<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow">
            <div class="card-header bg-success text-white">
                <h2 class="mb-0"><i class="fas fa-check-circle me-2"></i>Success!</h2>
            </div>
            <div class="card-body text-center">
                <div class="alert alert-success">
                    <h4><%= message %></h4>
                </div>
                
                <div class="row mt-4">
                    <div class="col-md-6">
                        <h5>Original Image</h5>
                        <img src="<%= submission.originalImageUrl %>" alt="Original" class="img-fluid rounded shadow">
                    </div>
                    <div class="col-md-6">
                        <h5>Swapped Image</h5>
                        <img src="<%= submission.swappedImageUrl %>" alt="Swapped" class="img-fluid rounded shadow">
                    </div>
                </div>

                <div class="mt-4">
                    <h5>Submission Details</h5>
                    <p><strong>Name:</strong> <%= submission.name %></p>
                    <p><strong>Email:</strong> <%= submission.email %></p>
                    <p><strong>Phone:</strong> <%= submission.phone %></p>
                    <p><strong>Submitted:</strong> <%= new Date(submission.createdAt).toLocaleString() %></p>
                </div>

                <div class="mt-4">
                    <a href="/" class="btn btn-primary me-2">
                        <i class="fas fa-plus me-1"></i>New Submission
                    </a>
                    <a href="/submissions" class="btn btn-outline-primary">
                        <i class="fas fa-list me-1"></i>View All Submissions
                    </a>
                    <a href="<%= submission.swappedImageUrl %>" download class="btn btn-success">
                        <i class="fas fa-download me-1"></i>Download Result
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
