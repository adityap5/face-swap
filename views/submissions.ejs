<!-- views/submissions.ejs -->

<div class="row">
    <div class="col-12">
        <div class="card shadow">
            <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
                <h2 class="mb-0">
                    <i class="fas fa-list me-2"></i>All Submissions
                </h2>
                
            </div>
            <div class="card-body">
                <% if (submissions && submissions.length > 0) { %>
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Phone</th>
                                    <th>Original Image</th>
                                    <th>Swapped Image</th>
                                    <th>Date</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% submissions.forEach(submission => { %>
                                <tr>
                                    <td><%= submission.name %></td>
                                    <td><%= submission.email %></td>
                                    <td><%= submission.phone %></td>
                                    <td>
                                        <img src="<%= submission.originalImageUrl %>" alt="Original" 
                                             class="img-thumbnail" style="width: 60px; height: 60px; object-fit: cover;">
                                    </td>
                                    <td>
                                        <img src="<%= submission.swappedImageUrl %>" alt="Swapped" 
                                             class="img-thumbnail" style="width: 60px; height: 60px; object-fit: cover;">
                                    </td>
                                    <td><%= new Date(submission.createdAt).toLocaleDateString() %></td>
                                    <td>
                                        <a href="/submissions/<%= submission._id %>" class="btn btn-sm btn-primary me-1">
                                            <i class="fas fa-eye"></i>
                                             <h6>view</h6>
                                        </a>
                                        <a href="<%= submission.swappedImageUrl %>" download class="btn btn-sm btn-success">
                                            <i class="fas fa-download"></i>
                                            <h6>download</h6>
                                        </a>
                                    </td>
                                </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>

                    <!-- Pagination -->
                    <% if (totalPages > 1) { %>
                    <nav aria-label="Submissions pagination">
                        <ul class="pagination justify-content-center">
                            <% if (hasPrevPage) { %>
                            <li class="page-item">
                                <a class="page-link" href="/submissions?page=<%= currentPage - 1 %>">Previous</a>
                            </li>
                            <% } %>
                            
                            <% for (let i = 1; i <= totalPages; i++) { %>
                            <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                                <a class="page-link" href="/submissions?page=<%= i %>"><%= i %></a>
                            </li>
                            <% } %>
                            
                            <% if (hasNextPage) { %>
                            <li class="page-item">
                                <a class="page-link" href="/submissions?page=<%= currentPage + 1 %>">Next</a>
                            </li>
                            <% } %>
                        </ul>
                    </nav>
                    <% } %>
                <% } else { %>
                    <div class="text-center py-5">
                        <i class="fas fa-inbox fa-5x text-muted mb-3"></i>
                        <h4>No submissions yet</h4>
                        <p class="text-muted">Be the first to submit a face swap!</p>
                        <a href="/" class="btn btn-primary">
                            <i class="fas fa-plus me-1"></i>Create First Submission
                        </a>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</div>
