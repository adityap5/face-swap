<!-- views/submission-detail.ejs -->

<div class="row justify-content-center">
    <div class="col-md-10">
        <div class="card shadow">
            <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                <h2 class="mb-0">
                    <i class="fas fa-eye me-2"></i>Submission Details
                </h2>
                <a href="/submissions" class="btn btn-light btn-sm">
                    <i class="fas fa-arrow-left me-1"></i>Back to List
                </a>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        <h5>Personal Information</h5>
                        <div class="card bg-light">
                            <div class="card-body">
                                <p><strong><i class="fas fa-user me-1"></i>Name:</strong> <%= submission.name %></p>
                                <p><strong><i class="fas fa-envelope me-1"></i>Email:</strong> <%= submission.email %></p>
                                <p><strong><i class="fas fa-phone me-1"></i>Phone:</strong> <%= submission.phone %></p>
                                <p><strong><i class="fas fa-calendar me-1"></i>Submitted:</strong> <%= new Date(submission.createdAt).toLocaleString() %></p>
                                <p><strong><i class="fas fa-check me-1"></i>Terms Accepted:</strong> 
                                    <span class="badge bg-success">Yes</span>
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-8">
                        <h5>Images</h5>
                        <div class="row">
                            <div class="col-md-6 text-center">
                                <h6>Original Image</h6>
                                <div class="image-container">
                                    <img src="<%= submission.originalImageUrl %>" alt="Original Image" 
                                         class="img-fluid rounded shadow mb-3" style="max-height: 300px;">
                                </div>
                                <a href="<%= submission.originalImageUrl %>" target="_blank" class="btn btn-outline-primary btn-sm me-1">
                                    <i class="fas fa-external-link-alt me-1"></i>View Full
                                </a>
                                <a href="<%= submission.originalImageUrl %>" download class="btn btn-outline-success btn-sm">
                                    <i class="fas fa-download me-1"></i>Download
                                </a>
                            </div>
                            <div class="col-md-6 text-center">
                                <h6>Face Swapped Image</h6>
                                <div class="image-container">
                                    <img src="<%= submission.swappedImageUrl %>" alt="Swapped Image" 
                                         class="img-fluid rounded shadow mb-3" style="max-height: 300px;">
                                </div>
                                <a href="<%= submission.swappedImageUrl %>" target="_blank" class="btn btn-outline-primary btn-sm me-1">
                                    <i class="fas fa-external-link-alt me-1"></i>View Full
                                </a>
                                <a href="<%= submission.swappedImageUrl %>" download class="btn btn-success btn-sm">
                                    <i class="fas fa-download me-1"></i>Download Result
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="row mt-4">
                    <div class="col-12 text-center">
                        <a href="/" class="btn btn-primary me-2">
                            <i class="fas fa-plus me-1"></i>New Submission
                        </a>
                        <a href="/submissions" class="btn btn-outline-primary">
                            <i class="fas fa-list me-1"></i>All Submissions
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
